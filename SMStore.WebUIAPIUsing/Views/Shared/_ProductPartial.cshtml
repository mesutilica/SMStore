@model Product

<div class="col-lg-4 col-md-6 portfolio-item filter-app">
    <img src="/Img/@Model.Image" class="img-fluid" alt="@Model.Name">
    <div class="portfolio-info">
        <h4>@Model.Name</h4>
        <p>@Model.Description</p>
        <a href="/Img/@Model.Image" data-gallery="portfolioGallery" class="portfolio-lightbox preview-link" title="@Model.Name"><i class="bx bx-plus"></i></a>
        <a href="/Products/Detail/@Model.Id" class="details-link" title="İncele"><i class="bx bx-link"></i></a>
    </div>
</div>