@model IEnumerable<Category>

@{
    var kategoriler = Model;

    foreach (var kategori in kategoriler.Where(c => c.ParentId == 0))
    {
        <li class="dropdown">
            <a href="#"><span>@kategori.Name</span> <i class="bi bi-chevron-down"></i></a>
            <ul>                
                @foreach (var altKategori in kategoriler.Where(c => c.ParentId == kategori.Id))
                {
                    <li><a href="/Categories/Index/@altKategori.Id">@altKategori.Name</a></li>
                }
            </ul>
        </li>        
    }
}
