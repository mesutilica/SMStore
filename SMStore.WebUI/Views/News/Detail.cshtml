@model News

@{
    ViewData["Title"] = Model.Name;
}

<div class="row">
    <div class="col">
        <img src="/Img/@Model.Image" alt="@Model.Name" class="img-fluid" />
    </div>
    <div class="col">
        <h1>@Model.Name</h1>

        <div>
            @Model.Description
        </div>

        <div>
            <i>Haber Tarihi:</i>  @Model.CreateDate
        </div>
    </div>
</div>